{% extends 'base.html.twig' %}

{% block body %}
    <ul>
        <li><a href="{{ url('account-homepage') }}">Home</a></li>
        <li><a href="{{ url('account-add-user') }}">Add user</a></li>
    </ul>

    <h2>User details</h2>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

    <h2>Integrations</h2>
    <ul>
        {% for name, integration in user_integration %}
            <li>{{ name }} | {% if integration is not null %}yes{% else %}no{% endif %}</li>
        {% endfor %}
    </ul>
{% endblock %}

{% block title %}
    Edit user
{% endblock %}

